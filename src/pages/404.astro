---
import Layout from "@/layouts/Layout.astro";
import Button from "@/components/Button.astro";
import Container from "@/components/Container.astro";
---

<Layout title="404 - Răzvan Balota">
  <Container class="flex items-center justify-center pt-16 sm:pt-32 h-[calc(100vh-357px)]">
    <div class="flex flex-col items-center justify-center">
      <p class="text-base font-semibold text-zinc-500">404</p>
      <h1
        class="mt-4 text-4xl font-bold tracking-tight sm:text-5xl text-zinc-100"
      >
        Page not found
      </h1>
      <p class="mt-4 text-base text-zinc-400">
        Sorry, we couldn’t find the page you’re looking for.
      </p>
      <Button href="/" variant="secondary" classes="mt-4">
        Go back home
      </Button>
    </div>
  </Container>
</Layout>
