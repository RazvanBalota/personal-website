---
import SimpleLayout from "@/layouts/SimpleLayout.astro";

import { Card } from "@/components/Card";
import { resume } from "@/data/resume";
---

<SimpleLayout
  title="Work - RÄƒzvan Balota"
  heading="My journey in tech"
  intro="Over the past few years, I've had the privilege of working across a variety of industries, honing my skills as a frontend developer. From crafting responsive, dynamic UIs to ensuring the seamless integration of APIs, my experience spans both freelance and corporate environments."
>
  <div
    class="md:border-l md:border-zinc-100 md:pl-6 md:dark:border-zinc-700/40"
  >
    <div class="flex max-w-3xl flex-col space-y-16">
      {
        resume.map((i) => (
          <article class="md:grid md:grid-cols-4 md:items-baseline">
            <Card className="md:col-span-3">
              <Card.Title href="#">{i.company}</Card.Title>
              <Card.Eyebrow
                as="time"
                dateTime={`${i.start} until ${typeof i.end === "string" ? i.end : i.end.label}`}
                className="md:hidden"
                decorate
              >
                {i.start} - {typeof i.end === "string" ? i.end : i.end.label}
              </Card.Eyebrow>
              <Card.Description>{i.description}</Card.Description>
            </Card>
            <Card.Eyebrow
              as="time"
              dateTime={`${i.start} until ${typeof i.end === "string" ? i.end : i.end.label}`}
              className="mt-1 hidden md:block"
            >
              {i.start} - {typeof i.end === "string" ? i.end : i.end.label}
            </Card.Eyebrow>
          </article>
        ))
      }
    </div>
  </div>
</SimpleLayout>
